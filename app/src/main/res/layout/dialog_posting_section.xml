<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/empty_white_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SECTION 설정하기"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/nanum_extra_bold"
        android:includeFontPadding="false"
        android:layout_gravity="center"
        android:textSize="17dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_posting_section_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginRight="15dp"
            android:text="전체"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/colorViolet"
            android:background="@drawable/pink_non_click_radius_background"/>

        <TextView
            android:id="@+id/dialog_posting_section_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginRight="15dp"
            android:text="관광지"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/colorViolet"
            android:background="@drawable/pink_non_click_radius_background"/>

        <TextView
            android:id="@+id/dialog_posting_section_food_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="맛집"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/colorViolet"
            android:background="@drawable/pink_non_click_radius_background"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_posting_section_finish_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/nanum_extra_bold"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:layout_gravity="center"
        android:textSize="17dp"/>

</LinearLayout>
