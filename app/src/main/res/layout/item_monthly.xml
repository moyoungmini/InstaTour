<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/item_monthly_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/month_item_picture_iv"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/main_color_shape_img"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/white_eye_img"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/item_monthly_view_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/nanum_regular"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="25"/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/item_monthly_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/nanum_extra_bold"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="5dp"
        android:includeFontPadding="false"
        android:text="# 강원도"
        />

    <TextView
        android:id="@+id/item_monthly_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGrey"
        android:fontFamily="@font/nanum_bold"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"
        android:textSize="12dp"
        android:text="게시물 2.8M"/>

</LinearLayout>